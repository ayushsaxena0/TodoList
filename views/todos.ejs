<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TodoList</title>
    <link rel="stylesheet" href="css/style.css" />
    <link rel="stylesheet" href="css/normalize.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container">
      <div class="add-todo-container">
        <h2>Add Todo</h2>
        <form action="todos/createTodo" method="post" autocomplete="off">
          <input type="text" name="todoItem" placeholder="Enter Todo Item" />
          <button type="submit">Add</button>
        </form>
      </div>
      <div class="mid-container">
        <div class="todo-container">
          <h1>TodoList</h1>
          <div>
            <% todos.forEach( el => { %>
            <div class="todoItem" data-id="<%=el._id%>">
              <span class="<%= el.completed === 'true' ? 'completed' : 'not'%>"
                ><%= el.todo %></span
              >

              <div class="edit">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  height="24px"
                  viewBox="0 -960 960 960"
                  width="24px"
                  fill="#714216"
                >
                  <path
                    d="M200-200h57l391-391-57-57-391 391v57Zm-80 80v-170l528-527q12-11 26.5-17t30.5-6q16 0 31 6t26 18l55 56q12 11 17.5 26t5.5 30q0 16-5.5 30.5T817-647L290-120H120Zm640-584-56-56 56 56Zm-141 85-28-29 57 57-29-28Z"
                  />
                </svg>
              </div>
              <div class="del">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  height="24px"
                  viewBox="0 -960 960 960"
                  width="24px"
                  fill="#EA3323"
                >
                  <path
                    d="M280-120q-33 0-56.5-23.5T200-200v-520h-40v-80h200v-40h240v40h200v80h-40v520q0 33-23.5 56.5T680-120H280Zm400-600H280v520h400v-520ZM360-280h80v-360h-80v360Zm160 0h80v-360h-80v360ZM280-720v520-520Z"
                  />
                </svg>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </div>
      <h2 class="left-todo">Things left to do: <%= left %></h2>
    </div>

    <script src="js/main.js"></script>
  </body>
</html>
